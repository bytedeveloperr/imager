<%- include("../partials/head") %> 
<%- include("../partials/topbar") %>
 <div class="card shadow-sm d-md-none d-sm-block mb-3">
  <div class="card-body">
    <i class="fa fa-upload text-reset"></i> <a href="/image/upload" class="stretched-link text-reset text-decoration-none">Upload Image(s)</a>
  </div>
</div>
<section class="row">
  <aside class="col-md-6 offset-md-3">
    <div class="d-flex justify-content-between">
      <h5 class="">Your Albums</h5> <a href="/album/create" class="text-decoration-none"><i class="fa fa-plus"></i> new</a>
    </div>
    <% if(albums.length < 1){ %>
      <p class="text-center text-muted">You do not have any album</p>
    <% } else { %>  
    <% albums.forEach(album => { %> 
    <div class="card shadow-sm mb-2">
      <div class="card-body">
        <p class="mb-1 fw-bold"><a href="/album/<%- album._id %> " class="stretched-link text-decoration-none text-reset"><%= album.name %></a></p>
        <div class="text-muted">
            <span><i class="fa fa-image"></i> <%- album.images.length %> images</span>
        </div>
    </div>
    </div>
    <% })} %>
  </aside>
</section>
<%- include("../partials/footer") %> 
